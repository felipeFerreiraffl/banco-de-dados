-- Exerc√≠cio BD - Pizzaria --
CREATE DATABASE pizzaria;
USE pizzaria;

CREATE TABLE cliente(
	id INT,
	telefone VARCHAR(11),
    nome VARCHAR(120),
    rua VARCHAR(255),
    nr INT,
    bairro VARCHAR(120),
    
    CONSTRAINT pk_cliente PRIMARY KEY (id) 
);

CREATE TABLE sabores(
	id INT, 
    nome VARCHAR(80),
    descricao VARCHAR(120),
    preco FLOAT(9, 2),
    
    CONSTRAINT pk_sabor PRIMARY KEY (id)
);

CREATE TABLE pedido(
	id INT,
    idCliente INT,
    dtPedido DATE,
    
    CONSTRAINT pk_pedido PRIMARY KEY (id),
    CONSTRAINT fk_cliente FOREIGN KEY (idCliente) REFERENCES cliente(id)
);

CREATE TABLE pedidoItens(
	id INT,
    idPedido INT,
    idSabor INT,
    preco FLOAT(9, 2),
    
    CONSTRAINT pk_pedidoItens PRIMARY KEY (id),
    CONSTRAINT fk_idPedido FOREIGN KEY (idPedido) REFERENCES pedido(id),
    CONSTRAINT fk_idSabor FOREIGN KEY (idSabor) REFERENCES sabores(id)
);

