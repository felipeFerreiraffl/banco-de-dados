CREATE DATABASE oficina;
USE oficina;

CREATE TABLE profissional(
	id INT AUTO_INCREMENT,
    nome VARCHAR(120),
    dtNasc DATE,
    
    CONSTRAINT pk_profissional PRIMARY KEY(id)
);

-- Alterar um dado de uma tabela --
ALTER TABLE profissional MODIFY nome VARCHAR(150);
ALTER TABLE profissional ADD(
	salario FLOAT(7,2) # Demonstra 7 nºs inteiros com duas casas decimais
);

-- DROP: deleta --
ALTER TABLE profissional DROP salario;
_____________________________________________________________________________________________________

-- Exercício BD --
CREATE DATABASE pizzaria;
USE pizzaria;

CREATE TABLE cliente(
	id INT,
	telefone VARCHAR(11),
    nome VARCHAR(120),
    rua VARCHAR(255),
    nr INT,
    bairro VARCHAR(120),
    
    CONSTRAINT pk_cliente PRIMARY KEY(id) 
);

CREATE TABLE pedido(
	id INT,
    idCliente INT,
    dtPedido DATE,
    
    CONSTRAINT pk_pedido PRIMARY KEY(id),
    CONSTRAINT fk_cliente FOREIGN KEY(idCliente) REFERENCES cliente(id)
);

CREATE TABLE pedidoItens(
	id INT,
    idPedido INT,
    idSabor INT,
    preco FLOAT,
    
    CONSTRAINT pk_pedidoItens PRIMARY KEY(id),
    CONSTRAINT fk_idPedido FOREIGN KEY(idPedido) REFERENCES pedido(id),
    CONSTRAINT fk_idSabor FOREIGN KEY(idSabor) REFERENCES sabores(id)
);

CREATE TABLE sabores(
	id INT,
    descricao VARCHAR(120),
    preco FLOAT,
    
    CONSTRAINT pk_pedido PRIMARY KEY(id)
);

